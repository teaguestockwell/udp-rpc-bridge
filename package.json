{
  "name": "udp-rpc-bridge",
  "version": "0.0.2",
  "description": "produce reliable, type safe udp client pairs",
  "license": "MIT",
  "typings": "dist/index.d.ts",
  "sideEffects": false,
  "exports": {
    "require": "./dist/index.cjs",
    "default": "./dist/index.modern.js"
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.module.js",
  "unpkg": "./dist/index.umd.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/teaguestockwell/udp-rpc-bridge"
  },
  "bugs": {
    "url": "https://github.com/teaguestockwell/udp-rpc-bridge/issues"
  },
  "homepage": "https://github.com/teaguestockwell/udp-rpc-bridge",
  "keywords": [
    "redux",
    "zustand",
    "jotai",
    "rxjs",
    "state",
    "mobx",
    "xstate"
  ],
  "files": [
    "dist",
    "src"
  ],
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "build": "microbundle --sourcemap false --tsconfig tsconfig.json --visualize",
    "test": "tsdx test",
    "lint": "tsdx lint src",
    "prepare": "yarn build"
  },
  "peerDependencies": {
    "react": ">=16"
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsdx lint"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "author": {
    "name": "Teague Stockwell",
    "email": "tsappdevelopment@gmail.com",
    "url": "https://teaguestockwell.com"
  },
  "devDependencies": {
    "babel-jest": "^29.2.2",
    "husky": "^8.0.1",
    "microbundle": "^0.15.0",
    "react": "^18.1.0",
    "react-dom": "^18.2.0",
    "tsdx": "^0.14.1",
    "tslib": "^2.4.0",
    "typescript": "^4.7.2"
  }
}
